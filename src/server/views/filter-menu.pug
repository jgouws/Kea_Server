mixin option(val, label)
  option(value=val)=label

#filter-menu
  h3 Filter
  .inputs
    form(method = 'post', action = '/gallery')
      .input-group.date(data-provide='datepicker', data-date-format='dd/mm/yyyy', startDate ='-3y')
        input.form-control#from(name='fromDate', type='text', placeholder = 'From Date')
        .input-group-addon
      .input-group.date(data-provide='datepicker')
        input.form-control#to(name='toDate',type='text', placeholder = 'To Date')
        .input-group-addon
      select#locations.form-control(name = 'locations')
        //var data = [1,2,3];
        each dt in data          
          option(value = dt.longitude) #{dt.longitude}
      select#observations.form-control(name = 'obs')
        each dt in data
          option(value = dt.species) #{dt.species}  
          //disabled selected value=''
      button(type='filter') Apply
